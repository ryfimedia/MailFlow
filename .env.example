# This file is an example. Create a .env file with your actual credentials.
# Do not commit the .env file to your repository.

# Firebase Client SDK Configuration (for browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Base URL for your deployed app (used for unsubscribe links)
# Example: https://your-app-name.web.app
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# The following are used by the backend and should be stored as secrets in your hosting provider (e.g., Google Secret Manager)
# RESEND_API_KEY=your_resend_api_key_here
# GOOGLE_API_KEY=your_google_ai_api_key_here
# FIREBASE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_service_account